{% extends 'banner.html.twig' %}
{% block content %}

    <br>
    <div class="jumbotron text-center">
        <h1 class="display-4">WebAppV Logs</h1>
        <div class="table-responsive-sm table-hover">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Date</th>
                    <th scope="col">Type</th>
                    <th scope="col">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for logdata in logsdata %}
                    <tr>
                        <td>{{ logdata.id }}</td>
                        <td>{{ logdata.date }} {{ logdata.hour }}</td>
                        <td>{{ logdata.type }}</td>
                        <td>{{ logdata.action }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <form action="{{ action1 }}" method={{ method }}>
        <button type="button" class="btn btn-primary btn-lg btn-block">Back</button>
        </form>
    </div>

{% endblock %}
